<Controls:MetroWindow
        x:Class="BCI.NotificationWindow"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" Height="150" Width="400">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="center">
            <Label Content="{Binding Message}" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
