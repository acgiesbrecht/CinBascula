<Controls:MetroWindow
        x:Class="BCI.ErrorWindow"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCI"
        mc:Ignorable="d"
        Title="Detalle del Error" Height="520" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Traza del Error" />
            <TextBox Margin="5" Height="200" Text="{Binding Message}" />
            <Label Content="Error interno" />
            <TextBox Margin="5" Height="200" Text="{Binding InnerExMessage}" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
